{
  "manifest_version": 2,

  "name": "Smithereen",
  "description": "Smithereens",
  "version": "0.1",

  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://*.desk.com/*"],
      "js": ["lib/keymaster.js", "content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
